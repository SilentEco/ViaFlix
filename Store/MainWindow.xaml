                        <Button x:Name="RentedMoviebtn" VerticalAlignment="Bottom" Background="#FF560027" Content="RENTED MOVIES" FontSize="12" Margin="0,0,0,35" Style="{StaticResource MaterialDesignRaisedDarkButton}"  materialDesign:ButtonAssist.CornerRadius="10" FontFamily="Arial" BorderBrush="{x:Null}" Click="RentedMoviebtn_Click" />
